# Voice Automation Platform - Backend Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# OpenAI Configuration (REQUIRED)
# ============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# ============================================================================
# Server Configuration
# ============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=True
RELOAD=True

# ============================================================================
# Database
# ============================================================================
DATABASE_URL=sqlite:///./voice_automation.db

# ============================================================================
# Webhook Configuration
# ============================================================================
WEBHOOK_BASE_URL=http://localhost:8000
WEBHOOK_SECRET=change_me_in_production_to_random_secure_string
WEBHOOK_TIMEOUT=30

# ============================================================================
# MCP Server Configuration
# ============================================================================
MCP_SERVER_DIR=./mcp_servers
MCP_AUTO_START=True
MCP_SERVER_TIMEOUT=60

# ============================================================================
# Voice Configuration
# ============================================================================
ENABLE_VOICE_INPUT=True
ENABLE_VOICE_OUTPUT=True
VOICE_PROVIDER=web_speech_api

# Options: web_speech_api, whisper, azure_speech, google_speech

# ============================================================================
# Agent Configuration
# ============================================================================
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT=300
AGENT_RETRY_ATTEMPTS=3

# ============================================================================
# Task Configuration
# ============================================================================
MAX_CONCURRENT_TASKS=5
TASK_QUEUE_SIZE=100
TASK_RESULT_TTL=3600

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/voice_automation.log

# Options for LOG_LEVEL: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Options for LOG_FORMAT: json, text

# ============================================================================
# CORS (Frontend URLs)
# ============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=True

# ============================================================================
# Redis (Optional - for production)
# ============================================================================
# REDIS_URL=redis://localhost:6379

# ============================================================================
# Security
# ============================================================================
SECRET_KEY=change_me_in_production_to_random_secure_string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_ANALYTICS=True
ENABLE_TELEMETRY=False
ENABLE_WEBHOOKS=True

# ============================================================================
# Development Notes
# ============================================================================
# 1. OPENAI_API_KEY is REQUIRED - get yours at https://platform.openai.com
# 2. Change WEBHOOK_SECRET and SECRET_KEY in production!
# 3. For production, consider using PostgreSQL instead of SQLite
# 4. Redis is recommended for production for better performance
# 5. Set DEBUG=False and RELOAD=False in production

