# Voice Automation Platform - Frontend Configuration
# Copy this file to .env.local and fill in your values

# ============================================================================
# API Configuration (REQUIRED)
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# ============================================================================
# Voice Configuration
# ============================================================================
NEXT_PUBLIC_VOICE_ENABLED=true
NEXT_PUBLIC_DEFAULT_LANGUAGE=en-US

# Supported languages: en-US, es-ES, fr-FR, de-DE, ja-JP

# ============================================================================
# UI Configuration
# ============================================================================
NEXT_PUBLIC_APP_NAME=Voice Automation Platform
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_MAX_TASKS_DISPLAY=20
NEXT_PUBLIC_MAX_AGENTS_DISPLAY=10

# ============================================================================
# WebSocket Configuration
# ============================================================================
NEXT_PUBLIC_WS_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_WS_RECONNECT_DELAY=1000
NEXT_PUBLIC_WS_PING_INTERVAL=30000

# ============================================================================
# Feature Flags
# ============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_VOICE_OUTPUT=true

# ============================================================================
# Theme Configuration
# ============================================================================
NEXT_PUBLIC_THEME=light
NEXT_PUBLIC_PRIMARY_COLOR=blue

# Options for THEME: light, dark, auto

# ============================================================================
# Development Notes
# ============================================================================
# 1. Make sure the backend is running at NEXT_PUBLIC_API_URL
# 2. WebSocket URL should match your backend WebSocket endpoint
# 3. Set NEXT_PUBLIC_ENABLE_DEBUG=true for development troubleshooting
# 4. For production, use environment-specific URLs (not localhost)

